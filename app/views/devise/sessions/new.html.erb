    <% content_for :for_head do %>
      <%= stylesheet_link_tag "login" %>
    <% end %>
    
    <%= render "devise/shared/title" %>
		<div class="screen__content">
      <%= form_for(resource, html: {class: "login"}, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login__field">
          <i class="login__icon fas fa-user"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login__input', placeholder: "Email" %>
				</div>
        <div class="login__field">
          <i class="login__icon fas fa-lock"></i>
          <%= f.password_field :password, autocomplete: "current-password", class: 'login__input', placeholder: "Password" %>
				</div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-10">
          <%= f.submit "Log in", class:'login__submit'%>
        </div>

        <% if devise_mapping.registerable? %>
        <div class="mt-3 d-flex align-center justify-center">
          <div>Or</div>
        </div>
        <% end %>
        <div class="actions mt-2">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
		</div>
			    <p class="notice"><%= notice %></p> 
    <p class="alert"><%= alert %></p> 
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		

